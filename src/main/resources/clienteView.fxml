<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.SOLID.Controlador.ClienteController">
   <center>
      <VBox spacing="15.0">
         <children>
            <!-- Formulario -->
            <VBox spacing="10.0">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Cédula:" minWidth="100.0" />
                        <TextField fx:id="txtCedula" prefWidth="300.0" promptText="Ingrese la cédula" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Nombre:" minWidth="100.0" />
                        <TextField fx:id="txtNombre" prefWidth="300.0" promptText="Ingrese el nombre" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Correo:" minWidth="100.0" />
                        <TextField fx:id="txtCorreo" prefWidth="300.0" promptText="Ingrese el correo" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Teléfono:" minWidth="100.0" />
                        <TextField fx:id="txtTelefono" prefWidth="300.0" promptText="Ingrese el teléfono" />
                     </children>
                  </HBox>
                  
                  <!-- Botones -->
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button onAction="#agregarCliente" text="Agregar" prefWidth="100.0" />
                        <Button onAction="#eliminarCliente" text="Eliminar" prefWidth="100.0" />
                        <Button onAction="#limpiarFormulario" text="Limpiar" prefWidth="100.0" />
                        <Button onAction="#cerrar" text="Cerrar" prefWidth="100.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Tabla -->
            <TableView fx:id="tblClientes" prefHeight="400.0" onMouseClicked="#seleccionarCliente">
               <columns>
                  <TableColumn fx:id="colCedula" prefWidth="120.0" text="Cédula" />
                  <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre" />
                  <TableColumn fx:id="colCorreo" prefWidth="200.0" text="Correo" />
                  <TableColumn fx:id="colTelefono" prefWidth="150.0" text="Teléfono" />
               </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>


