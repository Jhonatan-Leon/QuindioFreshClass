<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.SOLID.Controlador.ClienteController">
   <center>
      <VBox spacing="15.0">
         <children>
            <!-- Título -->
            <Label text="Gestión de Clientes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            
            <!-- Tabla -->
            <TableView fx:id="tblClientes" prefHeight="400.0">
               <columns>
                  <TableColumn fx:id="colCedula" prefWidth="120.0" text="Cédula" />
                  <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre" />
                  <TableColumn fx:id="colCorreo" prefWidth="200.0" text="Correo" />
                  <TableColumn fx:id="colTelefono" prefWidth="150.0" text="Teléfono" />
               </columns>
            </TableView>
            
            <!-- Botón Volver -->
            <HBox alignment="CENTER">
               <children>
                  <Button onAction="#volverAPedidos" text="Volver a Pedidos" prefWidth="150.0" />
               </children>
            </HBox>
            
            <!-- Mensaje -->
            <Label fx:id="lblMensaje" text="Clientes cargados" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
