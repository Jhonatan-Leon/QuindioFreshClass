<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.SOLID.Controlador.ProductoController">
   <center>
      <VBox spacing="15.0">
         <children>
            <!-- Título -->
            <Label text="Gestión de Productos" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            
            <!-- Tabla -->
            <TableView fx:id="tblProductos" prefHeight="400.0">
               <columns>
                  <TableColumn fx:id="colSku" prefWidth="150.0" text="SKU" />
                  <TableColumn fx:id="colNombre" prefWidth="300.0" text="Nombre" />
                  <TableColumn fx:id="colPrecio" prefWidth="150.0" text="Precio" />
               </columns>
            </TableView>
            
            <!-- Botón Volver -->
            <HBox alignment="CENTER">
               <children>
                  <Button onAction="#volverAPedidos" text="Volver a Pedidos" prefWidth="150.0" />
               </children>
            </HBox>
            
            <!-- Mensaje -->
            <Label fx:id="lblMensaje" text="Productos cargados" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
