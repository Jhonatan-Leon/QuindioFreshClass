<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.SOLID.Controlador.ProductoController">
   <center>
      <VBox spacing="15.0">
         <children>
            <!-- Formulario -->
            <VBox spacing="10.0">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="SKU:" minWidth="100.0" />
                        <TextField fx:id="txtSku" prefWidth="300.0" promptText="Ingrese el SKU" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Nombre:" minWidth="100.0" />
                        <TextField fx:id="txtNombre" prefWidth="300.0" promptText="Ingrese el nombre" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Precio:" minWidth="100.0" />
                        <TextField fx:id="txtPrecio" prefWidth="300.0" promptText="Ingrese el precio" />
                     </children>
                  </HBox>
                  
                  <!-- Botones -->
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button onAction="#agregarProducto" text="Agregar" prefWidth="100.0" />
                        <Button onAction="#actualizarProducto" text="Actualizar" prefWidth="100.0" />
                        <Button onAction="#eliminarProducto" text="Eliminar" prefWidth="100.0" />
                        <Button onAction="#limpiarFormulario" text="Limpiar" prefWidth="100.0" />
                        <Button onAction="#cerrar" text="Cerrar" prefWidth="100.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Tabla -->
            <TableView fx:id="tblProductos" prefHeight="400.0" onMouseClicked="#seleccionarProducto">
               <columns>
                  <TableColumn fx:id="colSku" prefWidth="150.0" text="SKU" />
                  <TableColumn fx:id="colNombre" prefWidth="300.0" text="Nombre" />
                  <TableColumn fx:id="colPrecio" prefWidth="150.0" text="Precio" />
               </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>


